{
  "name": "metalsmith",
  "version": "2.3.0",
  "license": "MIT",
  "repository": "git://github.com/segmentio/metalsmith.git",
  "description": "An extremely simple, pluggable static site generator.",
  "bin": {
    "metalsmith": "bin/metalsmith",
    "_metalsmith": "bin/_metalsmith"
  },
  "scripts": {
    "pretest": "npm install",
    "test": "npx mocha $HARMONY_OPTS",
    "pretest-debug": "npm install",
    "test-debug": "npx mocha debug",
    "precoverage": "npm install",
    "coverage": "nyc npm test",
    "postcoverage": "nyc report --reporter=lcov",
    "precoveralls": "npm run coverage",
    "coveralls": "npx coveralls < coverage/lcov.info",
    "lint": "npx eslint index.js lib/* bin/* test/*.js"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "clone": "^2.1.1",
    "commander": "^2.6.0",
    "fs-extra": "^6.0.1",
    "gray-matter": "^4.0.1",
    "has-generators": "^1.0.1",
    "is-utf8": "~0.2.0",
    "recursive-readdir": "^2.1.0",
    "rimraf": "^2.2.8",
    "stat-mode": "^0.2.0",
    "ware": "^1.2.0",
    "win-fork": "^1.1.1"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "co-mocha": "^1.0.1",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "metalsmith-drafts": "0.0.1",
    "metalsmith-markdown": "^0.2.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2"
  },
  "engines": {
    "node": ">=8 <11",
    "npm": ">=5.2.0"
  },
  "keywords": [
    "static",
    "file",
    "site",
    "website",
    "blog",
    "generator",
    "markdown",
    "jekyll",
    "wintersmith",
    "blacksmith"
  ]
}
